{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "spaced-comment": "off",
        "object-curly-spacing": "warn",
        "max-len": ["off", { "code": 250 }],
        "import/no-cycle": [2, { "maxDepth": 3 }]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["./src","src"]
            }
        }
    }
}
